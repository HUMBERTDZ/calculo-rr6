package com.ws_rr7_generico.services.impl;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.Base64;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.ws_rr7_generico.dao.CadqDAO;
import com.ws_rr7_generico.dao.PrimDAO;
import com.ws_rr7_generico.models.ArchivoRespuesta;
import com.ws_rr7_generico.models.BaseLayoutRr7;
import com.ws_rr7_generico.models.Cadq;
import com.ws_rr7_generico.models.Prim;
import com.ws_rr7_generico.services.CADQService;
import com.ws_rr7_generico.util.Constantes;
import com.ws_rr7_generico.util.ResponseMessage;

@Transactional(rollbackFor = Exception.class)
@Service
public class CADQServiceImpl implements CADQService {
	@Autowired
	private CadqDAO cadqDAO;
	
	String nivel1 = "0",nivel2 = "0",nivel3 = "0",nivel4 = "0",moneda = "0",claveCtoAdq = "0",subclaveCtoAdq = "0",operacion = "0",
			claveRamo = "0",claveSubRamo = "0",claveSubSubRamo = "0",saldo = "0";
	String cadena = nivel1.concat("|").concat(nivel2).concat("|").concat(nivel3).concat("|").concat(nivel4).concat("|")
			.concat(moneda).concat("|").concat(claveCtoAdq).concat("|").concat(subclaveCtoAdq).concat("|")
			.concat(operacion).concat("|").concat(claveRamo).concat("|").concat(claveSubRamo).concat("|;");
	
	@Override
	 public ArchivoRespuesta obtenerCADQ(String nombre) throws IOException {
		ArchivoRespuesta ar = new ArchivoRespuesta();
		ar.setBaseArchivo(GenerarTxtCadq(nombre));
		ar.setNombreArchivo(nombre);
		return ar;
	}
	public String GenerarTxtCadq(String nombre) throws IOException {
		String response = "";
		List<Cadq> ListaCadq = cadqDAO.findAll();

		File archivo = new File("D:\\TempSesa\\" + nombre);

		if (archivo.exists()) {
			archivo.delete();
		}
		archivo.createNewFile();
		FileWriter fw = new FileWriter(archivo, true);
		BufferedWriter bw = new BufferedWriter(fw);
		if (ListaCadq != null && ListaCadq.size() != 0) {
			for (Cadq Lista : ListaCadq) {

				nivel1 = Lista.getNivel1().isEmpty() || Lista.getNivel1() == null ? "0" : Lista.getNivel1() ;
				nivel2 = Lista.getNivel2();
				nivel3 = Lista.getNivel3();
				nivel4 = Lista.getNivel4();
				moneda = Lista.getMoneda();
				claveCtoAdq = Lista.getClaveCtoAdq();
				subclaveCtoAdq = Lista.getSubClaveCtoAdq();
				operacion = Lista.getOperacion();
				claveRamo = Lista.getCveRamo();
				claveSubRamo = Lista.getCveSubram();
				claveSubSubRamo = Lista.getCveSubsubramo();
				saldo = Lista.getSaldo();
								
				bw.write(nivel1.concat("|").concat(nivel2).concat("|").concat(nivel3).concat("|").concat(nivel4).concat("|")
						.concat(moneda).concat("|").concat(claveCtoAdq).concat("|").concat(subclaveCtoAdq).concat("|")
						.concat(operacion).concat("|").concat(claveRamo).concat("|").concat(claveSubRamo)
						.concat("|").concat(claveSubSubRamo).concat("|").concat(saldo).concat("|;"));
				bw.newLine();
			}
			System.out.println("lleno");
		} else {
			bw.write(cadena);
			bw.newLine();
			System.out.println("nulo o vacio");
		}
		bw.close();
		fw.close();
		System.out.println("Archivo CADQ creado correctamente");
		byte[] input_file;
		byte[] encodedBytes;
		input_file = Files.readAllBytes(Paths.get(archivo.getAbsolutePath()));
		encodedBytes = Base64.getEncoder().encode(input_file);
		response = new String(encodedBytes);
		return response;
	}
	@Override
	public ResponseMessage updateCadq(List<BaseLayoutRr7> getBaseLayoutRr7) {
		ResponseMessage respuesta = null;		
		List<Cadq> getCadq = cadqDAO.findAll();
		BaseLayoutRr7 baseLayoutRr7Result ;
		for (Cadq cadq: getCadq) {

			baseLayoutRr7Result = getBaseLayoutRr7
	                .stream().filter(producer -> (producer.getCtaQtoNivNvoCat()+producer.getTipoMoneda()+producer.getRamo()+producer.getSubramo()+producer.getSubsubramo()+producer.getSubCtaCatAnt()).
	                		equals(cadq.getNivel1()+cadq.getNivel2()+cadq.getNivel3()+cadq.getNivel4()+cadq.getMoneda()+cadq.getCveRamo()
	                		+cadq.getCveSubram()+cadq.getCveSubsubramo()+cadq.getSubClaveCtoAdq())).findFirst().orElse(null);
			if (baseLayoutRr7Result != null) {
				cadq.setSaldo(""+baseLayoutRr7Result.getMontMonConsolidada());
			}else {
				cadq.setSaldo(""+0);
			}
		}
		if (cadqDAO.saveAll(getCadq) != null) {
			respuesta = new ResponseMessage(Constantes.RESPONSEMESSAGE_OK, "Archivo Cadq actualizado ", 1);
		}		
		return respuesta;
	}
	
}
