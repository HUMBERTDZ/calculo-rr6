package com.ws_rr7_generico.dao;

import java.util.List;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;
import com.ws_rr7_generico.models.Oact;

@Repository
public interface OactDAO extends JpaRepository<Oact, Integer> {

	/******************************************************************************************************
	******************************* OBTENCION LISTA ORDENADA***************************************/		
	@Query(value = "SELECT NIVEL_1, NIVEL_2, NIVEL_3, NIVEL_4, MONEDA, CVE_OTROS_ACTIV, SUB_CVE_OTROS_ACTIV, AFECTACION, NIVEL_FONDOS "
			+ "FROM OACT ORDER BY NIVEL_1, NIVEL_2, NIVEL_3, NIVEL_4, MONEDA, CVE_OTROS_ACTIV, SUB_CVE_OTROS_ACTIV", nativeQuery = true)
	List<Oact> obtenerOACT();
}
