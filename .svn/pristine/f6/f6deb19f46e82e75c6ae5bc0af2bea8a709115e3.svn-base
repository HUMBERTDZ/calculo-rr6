package com.ws_rr7_generico.services.impl;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.Base64;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.ws_rr7_generico.dao.OpasDAO;
import com.ws_rr7_generico.models.Acre;
import com.ws_rr7_generico.models.ArchivoRespuesta;
import com.ws_rr7_generico.models.BaseLayoutRr7;
import com.ws_rr7_generico.models.Opas;
import com.ws_rr7_generico.services.OPASService;
import com.ws_rr7_generico.util.Constantes;
import com.ws_rr7_generico.util.ResponseMessage;

@Transactional(rollbackFor = Exception.class)
@Service
public class OPASServiceImp implements OPASService {
	@Autowired
	private OpasDAO opasDAO;
	
	String nivel1 = "0",nivel2 = "0",nivel3 = "0",nivel4 = "0",moneda = "0",claveOtrosPas = "0",subClaveOtrosPas = "0";
	double saldo = 0;
	String cadena = nivel1.concat("|").concat(nivel2).concat("|").concat(nivel3).concat("|").concat(nivel4).concat("|")
			.concat(moneda).concat("|").concat(claveOtrosPas).concat("|").concat(subClaveOtrosPas).concat("|").concat(String.valueOf(saldo));
	@Override
	 public ArchivoRespuesta obtenerOPAS(String nombre) throws IOException {
		ArchivoRespuesta ar = new ArchivoRespuesta();
		ar.setBaseArchivo(GenerarTxtOpas(nombre));
		ar.setNombreArchivo(nombre);
		return ar;
	}
	public String GenerarTxtOpas(String nombre) throws IOException {
		String response = "";
		List<Opas> ListaOpas = opasDAO.findAll();
			
		File archivo = new File("D:\\TempSesa\\" + nombre);

		if (archivo.exists()) {
			archivo.delete();
		}
		archivo.createNewFile();
		FileWriter fw = new FileWriter(archivo, true);
		BufferedWriter bw = new BufferedWriter(fw);
		if (ListaOpas != null && ListaOpas.size() != 0) {
			for (Opas Lista : ListaOpas) {

				nivel1 = Lista.getNivel1();
				nivel2 = Lista.getNivel2();
				nivel3 = Lista.getNivel3();
				nivel4 = Lista.getNivel4();
				moneda = Lista.getMoneda();
				claveOtrosPas = Lista.getClaveOtrosPasiv();
				subClaveOtrosPas = Lista.getSubClaveOtrosPasiv();
				saldo = Lista.getSaldo();				
				
				bw.write(nivel1.concat("|").concat(nivel2).concat("|").concat(nivel3).concat("|").concat(nivel4).concat("|")
						.concat(moneda).concat("|").concat(claveOtrosPas).concat("|").concat(subClaveOtrosPas).concat("|").concat(String.valueOf(saldo))
						.concat("|;"));
				bw.newLine();
			}
			System.out.println("lleno");
		} else {
			bw.write(cadena);
			bw.newLine();
			System.out.println("nulo o vacio");
		}
		bw.close();
		fw.close();
		System.out.println("Archivo Opas creado correctamente");
		byte[] input_file;
		byte[] encodedBytes;
		input_file = Files.readAllBytes(Paths.get(archivo.getAbsolutePath()));
		encodedBytes = Base64.getEncoder().encode(input_file);
		response = new String(encodedBytes);
		return response;
	}
	@Override
	public ResponseMessage updateOpas(List<BaseLayoutRr7> getBaseLayoutRr7) {
		ResponseMessage respuesta = null;		
		List<Opas> getOpas = opasDAO.findAll();
		BaseLayoutRr7 baseLayoutRr7Result ;
		for (Opas opas: getOpas) {

			baseLayoutRr7Result = getBaseLayoutRr7
	                .stream().filter(producer -> (producer.getCtaQtoNivNvoCat()+producer.getTipoMoneda()+producer.getSubCtaCatAnt()).
	                		equals(opas.getNivel1()+opas.getNivel2()+opas.getNivel3()+opas.getNivel4()+opas.getMoneda()+opas.getSubClaveOtrosPasiv())).findFirst().orElse(null);

			if (baseLayoutRr7Result != null) {
				opas.setSaldo(baseLayoutRr7Result.getMontMonConsolidada());
				
			}else {
				opas.setSaldo(0);
			}			
		}
		if (opasDAO.saveAll(getOpas) != null) {
			respuesta = new ResponseMessage(Constantes.RESPONSEMESSAGE_OK, "Archivo Opas actualizado ", 1);
		}
		
		return respuesta;
	}
	

}
